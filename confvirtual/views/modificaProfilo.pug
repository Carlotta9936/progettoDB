extends layout 

block content 
    .card
      .card-body
        if msg!=""
          .alert.alert-danger.d-flex.align-items-center(role='alert')
            svg.bi.bi-exclamation-triangle-fill.flex-shrink-0.me-2(xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='currentColor' viewBox='0 0 16 16' role='img' aria-label='Warning:')
              path(d='M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z')
            div
              | Errore: #{msg}
        form(action='/utenti/:username/modificaProfilo' method='POST')
          .form-group
            label(for='username') Username
            input#username.form-control(type='text' name='username' value= Dati.username)
          .form-group
            label(for='password') Password
            input#password.form-control(type='password' name='password' value= Dati.password)
          .form-group
            label(for='passwordConfirm') Conferma password
            input#passwordConfirm.form-control(type='password' name='passwordConfirm' value= Dati.password)
          br
          .form-group
            label(for='nome') Nome
            input#nome.form-control(type='text' name='nome' value= Dati.nome)
          .form-group
            label(for='cognome') Cognome
            input#cognome.form-control(type='text' name='cognome' value= Dati.cognome)
          .form-group
            label(for='luogoNascita') Luogo di nascita
            input#luogoNascita.form-control(type='text' name='luogoNascita' value= Dati.luogo_nascita)
          .form-group
            label(for='dataNascita') Data di nascita
            input#dataNascita.form-control(type='date' name='dataNascita' value= Dati.data_nascita)
          button.btn.btn-primary.mt-3(type='submit') Aggiorna
