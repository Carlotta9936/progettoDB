extends layout 

block content 
  h2='Crea un nuovo Autore'
  // your content here...
  if msg!=""
    .alert.alert-success.d-flex.align-items-center(role='alert')
        svg(xmlns='http://www.w3.org/2000/svg' style='display: none;')
        symbol#check-circle-fill(fill='currentColor' viewBox='0 0 16 16')
            path(d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z')
        div
        | #{msg} #{articolo}
  form(action='' method='POST')
    .form-group
      label(for='auto') Nome
      input#nome.form-control(type='text' name='nome')
    .form-group
      label(for='cognome') Cognome
      input#cognome.form-control(type='text' name='cognome')
    button.btn.btn-primary(type='submit') Crea
  
  form(action='..' method='get')
    button.btn.btn-primary(type='submit') Indietro