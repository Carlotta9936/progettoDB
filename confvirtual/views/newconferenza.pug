extends layout 

block content
  .container.mt-4.col-5
    .card
      .card-body
        if error
          .alert.alert-danger.d-flex.align-items-center(role='alert')
            svg.bi.bi-exclamation-triangle-fill.flex-shrink-0.me-2(xmlns='http://www.w3.org/2000/svg' width='24' height='24' fill='currentColor' viewBox='0 0 16 16' role='img' aria-label='Warning:')
              path(d='M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z')
            div
              | Errore: #{msg}
        form(action='/conferenza/nuovaConferenza1-3' method='POST' enctype='multipart/form-data')
          .form-group
            label(for='acronimo') Acronimo:
            input#acronimo.form-control(type='text' name='acronimo')
          .form-group
            label(for='anno') Anno:
            input#anno.form-control(type='text' name='anno')
          .form-group
            label(for='nome') Nome:
            input#nome.form-control(type='text' name='nome')
          .form-group
            label(for='dataInizio') DataInizio:
            input#dataInizio.form-control(type='date' name='dataInizio')
          .form-group
            label(for='dataFine') DataFine:
            input#dataFine.form-control(type='date' name='dataFine')
          .form-group.mt-2
            label(for='logo') Logo:
            input(type='file' name='logo' accept='image/*')
          button.btn.btn-primary.mt-2(type='submit') Crea